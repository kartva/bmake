{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Configure (Debug)",
			"type": "shell",
			"command": "cmake -B ./build -DCMAKE_BUILD_TYPE=Debug && sudo chmod -R a+rwx ./build",
			"options": {"cwd": "${workspaceFolder}/cpp"},
			"problemMatcher": []
		},
		{
			"label": "CMake: Configure (Release)",
			"type": "shell",
			"options": {"cwd": "${workspaceFolder}/cpp"},
			"command": "cmake -B ./build -DCMAKE_BUILD_TYPE=Release && sudo chmod -R a+rwx ./build",
			"problemMatcher": []
		},
		{
			"label": "Build Search",
			"group": "build",
			"type": "shell",
			"command": "cmake --build ./build --target searchtest",
			"options": {"cwd": "${workspaceFolder}/cpp"},
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "Build C++",
			"group": "build",
			"type": "shell",
			"command": "cmake --build ./build --target main2",
			"options": {"cwd": "${workspaceFolder}/cpp"},
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "Build NN",
			"group": "build",
			"type": "shell",
			"command": "cmake --build ./build --target nn",
			"options": {"cwd": "${workspaceFolder}/cpp"},
			"problemMatcher": ["$gcc"]
		},
	]
}